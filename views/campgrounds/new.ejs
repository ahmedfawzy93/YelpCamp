<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">
			Create a new Campground
		</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type ="text" placeholder="Campground Name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type ="number" placeholder="Campground Price Per Night" name="price" min="0.5" step="0.5">
				</div>
				<div class="form-group">
					<input class="form-control" type ="text" placeholder="Image Url" name="image">
				</div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Camp Description">
                </div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit!
					</button>
				</div>
			</form>
			<a href="/campgrounds">Back to Campgrounds</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>
